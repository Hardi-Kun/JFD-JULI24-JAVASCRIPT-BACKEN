<style>
    .padding-td{
        padding: 5px;
    }
</style>



<h1>Data Seluruh Karyawan PT Konoha Makmur Sentosa</h1>
<hr>

<a href="/karyawan/tambah">
    <button style="margin-bottom: 5px; background-color: aqua;">
        Tambah
    </button>
</a>

<table border="1">
    <thead>
        <tr>
            <th>Nama</th>
            <th>Gender</th>
            <th>NIP</th>
            <th class="padding-td" colspan="2">Pilihan</th>
           
        </tr>
    </thead>
    <tbody>
        <% for (let i = 0; i < karyawan.length; i++) { %>
        <tr>
            <td class=".padding-td"><%= karyawan[i].Nama %></td>
            <td class=".padding-td"><%= karyawan[i].Gender %></td>
            <td class=".padding-td"><%= karyawan[i].NIP %></td>
            <td class=".padding-td">
                <a href="/karyawan/detail/<%= karyawan[i].id %>">
                    <button>Lihat Details</button>
                </a>
            </td>
            <td class=".padding-td">
                <a href="/karyawan/edit/<%= karyawan[i].id %>">
                    <button style="background-color: yellow; color: white;">Edit</button>
                </a>
            </td>
            <td>
                <a href="/karyawan/hapus<%= karyawan[i].id %>" onclick="return confirm('Yakin mau hapus <%= karyawan[i].Nama %> ??? ')">
                    <button style="background-color: red; color: white;">Hapus</button>
                </a>
            </td>
        </tr>
            <% } %>
    </tbody>
</table>
