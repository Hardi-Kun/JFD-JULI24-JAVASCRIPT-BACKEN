<style>
    .padding-td{
        padding: 5px;
    }

    .tambah-container    {
        margin-bottom: 5px; 
        background-color: aqua;
    }

    .tambah-container:hover {
        
    }
</style>



<h1>Data Seluruh Karyawan PT Konoha Makmur Sentosa</h1>
<hr>

<% if (message) { %>
    <div style="background-color: lightgreen; text-transform: capitalize; padding: 5px; text-align: center;"> 
        <b><%= message %></b>
    </div>
<% } %>
<br>



<a href="/karyawan/tambah">
    <button class="tambah-container">
        Tambah
    </button>
</a>

<table border="1">
    <thead>
        <tr>
            <th>Nama</th>
            <th>Gender</th>
            <th>NIP</th>
            <th class="padding-td" colspan="3">Pilihan</th>
           
        </tr>
    </thead>
    <tbody>
        <% for (let i = 0; i < karyawan.length; i++) { %>
        <tr>
            <td class=".padding-td"><%= karyawan[i].Nama %></td>
            <td class=".padding-td"><%= karyawan[i].Gender %></td>
            <td class=".padding-td"><%= karyawan[i].NIP %></td>
            <td class=".padding-td">
                <a href="/karyawan/detail/<%= karyawan[i].id %>">
                    <button>Lihat Details</button>
                </a>
            </td>
            <td class=".padding-td">
                <a href="/karyawan/edit/<%= karyawan[i].id %>">
                    <button style="background-color: yellow; color: black;">Edit</button>
                </a>
            </td>
            <td>
                <a href="/karyawan/hapus/<%= karyawan[i].id %>" onclick="return confirm('Yakin mau hapus <%= karyawan[i].Nama %> ??? ')">
                    <button style="background-color: red; color: white;">Hapus</button>
                </a>
            </td>
        </tr>
            <% } %>
    </tbody>
</table>
